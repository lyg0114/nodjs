doctype html
html
  head
    meta(charset='utf-8')
  body
    h1
      a(href='/topic') Server Side JavaScript
    ul
      each lis in topics
        li
          a(href='/topic/'+lis)=lis
    article
      form(action='/topic' method='post')
        p
          input(type='text' name='title' placeholder='title')
        P
          textarea(name='description')
        p
          input(type='submit')
